<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/myColor"
    android:padding="8dp">

    <TextView
        android:id="@+id/welcomeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to SHA-1 Encryption Tester Application"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/myWhite"
        android:textSize="30sp"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/txtInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Message To Digest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textColor="@color/myWhite"
        android:textSize="25sp"
        android:layout_below="@+id/welcomeTxt"
        />
    <EditText
        android:id="@+id/edtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/myWhite"
        android:textSize="25sp"
        android:layout_below="@+id/txtInstruction"
        android:inputType="textPassword|textMultiLine"
        android:autofillHints="Any Text"
        android:background="@color/white"
        android:padding="3dp"
        android:layout_marginHorizontal="5dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btnDigest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtMessage"
        android:layout_centerHorizontal="true"
        android:text="Digest Message"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/myWhite"
        android:textColor="@color/black"
        />

</RelativeLayout>