<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity"
    android:background="@color/myColor">

    <TextView
        android:id="@+id/txtNotifySuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Encrypted Succesfully"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/SavedHashlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Hash: "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textColor="@color/myWhite"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_below="@+id/txtNotifySuccess"
        android:layout_marginHorizontal="5dp"
        />
    <TextView
        android:id="@+id/txtSavedHash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-------"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/myWhite"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_below="@+id/SavedHashlbl"
        android:layout_marginHorizontal="5dp"
        android:lines="2"
        />

    <EditText
        android:id="@+id/edtVerifyMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Message to Verify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/myColor"
        android:scrollbars="vertical"
        android:textSize="20sp"
        android:layout_below="@id/txtSavedHash"
        android:autofillHints="nothing"
        android:inputType="textVisiblePassword|textMultiLine"
        android:lines="2"
        android:layout_marginHorizontal="5dp"
        android:textAlignment="center"
        android:background="@color/white"
        />
    <Button
        android:id="@+id/btnVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtVerifyMsg"
        android:layout_centerHorizontal="true"
        android:text="Verify/Test Algorithm"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/txtOR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_below="@id/btnVerify"
        />
    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOR"
        android:layout_centerHorizontal="true"
        android:text="Re-Enter Message"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        />

</RelativeLayout>